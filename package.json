{
  "name": "angular-tuned",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "hmr": "ng serve --hmr -e=hmr",
    "build": "ng build --prod",
    "test": "ng test",
    "lint": "./node_modules/.bin/stylelint src/**/*.scss && ng lint",
    "fix": "./node_modules/.bin/stylelint src/**/*.scss --fix && ng lint --fix",
    "e2e": "ng e2e",
    "build:client-and-server-bundles": "ng build --prod && ng build --prod --app 1 --output-hashing=false",
    "build:prerender": "npm run build:client-and-server-bundles && npm run webpack:server && npm run generate:prerender",
    "build:ssr": "npm run build:client-and-server-bundles && npm run webpack:server",
    "build:fire-ssr": "ng build --prod --app 2 && ng build --prod --app 3 --output-hashing=false",
    "generate:prerender": "cd dist && node prerender",
    "webpack:server": "webpack --config webpack.server.config.js --progress --colors",
    "serve:prerender": "cd dist/browser && http-server",
    "serve:ssr": "node dist/server",
		"cz-commit": "git-cz"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^5.2.0",
    "@angular/app-shell": "^0.1.0",
    "@angular/cdk": "^5.2.4",
    "@angular/common": "^5.2.0",
    "@angular/compiler": "^5.2.0",
    "@angular/core": "^5.2.0",
    "@angular/forms": "^5.2.0",
    "@angular/http": "^5.2.0",
    "@angular/platform-browser": "^5.2.0",
    "@angular/platform-browser-dynamic": "^5.2.0",
    "@angular/platform-server": "^5.2.0",
    "@angular/router": "^5.2.0",
    "@angular/service-worker": "^5.2.0",
    "@nguniversal/common": "^5.0.0-beta.6",
    "@nguniversal/express-engine": "^5.0.0-beta.6",
    "@nguniversal/module-map-ngfactory-loader": "^5.0.0-beta.6",
    "angularfire2": "^5.0.0-rc.6",
    "compression": "^1.7.2",
    "core-js": "^2.4.1",
    "firebase": "^4.12.0",
    "rxjs": "^5.5.6",
    "zone.js": "^0.8.19"
  },
  "devDependencies": {
    "@angular/cli": "~1.7.3",
    "@angular/compiler-cli": "^5.2.0",
    "@angular/language-service": "^5.2.0",
    "@angularclass/hmr": "^2.1.3",
    "@types/jasmine": "~2.8.3",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "^8.0.30",
    "codelyzer": "^4.2.1",
    "commitizen": "^2.9.6",
    "cpy-cli": "^1.0.1",
    "cz-conventional-changelog": "^2.1.0",
    "express": "^4.16.3",
    "http-server": "^0.11.1",
    "husky": "^0.14.3",
    "jasmine-core": "~2.8.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~2.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "lint-staged": "^7.0.2",
    "pre-commit": "^1.2.2",
    "prettier": "1.11.1",
    "protractor": "~5.1.2",
    "reflect-metadata": "^0.1.12",
    "stylelint": "^9.1.3",
    "stylelint-order": "^0.8.1",
    "stylelint-scss": "^3.0.0",
    "ts-loader": "^2.3.7",
    "ts-node": "~4.1.0",
    "tslint": "~5.9.1",
    "tslint-config-airbnb": "^5.7.0",
    "typescript": "~2.5.3"
  },
  "lint-staged": {
    "*.ts": [
      "ng lint",
      "git add"
    ],
    "*.scss": "stylelint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
