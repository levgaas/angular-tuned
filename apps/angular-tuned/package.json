{
  "name": "angular-tuned",
  "version": "0.0.0",
  "license": "MIT",
  "main": "electron-main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng run angular-tuned:serve",
    "e2e": "ng run angular-tuned:e2e",
    "hmr": "ng run angular-tuned:serve --hmr -e=hmr",
    "build": "ng run angular-tuned:build:production",
    "test": "ng run angular-tuned:test --watch=false",
    "test:watch": "ng run angular-tuned:test",
    "lint": "cross-env NODE_ENV=development ../../node_modules/.bin/stylelint ./src/**/*.scss ng run angular-tuned:lint",
    "fix": "cross-env NODE_ENV=development ../../node_modules/.bin/stylelint ./src/**/*.scss --fix && ng run angular-tuned:lint --fix",
    "postinstall": "npx electron-builder install-app-deps",
    "build:client-and-server-bundles": "ng run angular-tuned:build-with-app-shell",
    "mobile:build:prod": "ng run angular-tuned:mobile-build:production",
    "mobile:serve:browser": "cd ./mobile-app && cordova run browser",
    "mobile:serve:android": "cd ./mobile-app && cordova run android",
    "mobile:serve:ios": "cd ./mobile-app && cordova run ios",
    "build:prerender": "npm run build:client-and-server-bundles && npm run webpack:server && npm run generate:prerender",
    "build:ssr": "npm run build:client-and-server-bundles && npm run webpack:server",
    "build:fire-ssr": "ng run angular-tuned:firebase-functions-build-with-app-shell",
    "generate:prerender": "node ../../dist/apps/angular-tuned/prerender",
    "webpack:server": "cross-env NODE_ENV=development ../../node_modules/.bin/webpack --config ./webpack.server.config.js --progress --colors",
    "serve:prerender": "cd ../../dist/apps/angular-tuned/browser && http-server",
    "serve:ssr": "node ../../dist/apps/angular-tuned/server",
    "electron:build:prod": "npm run electron:tsc && ng build --prod --base-href=./ --output-path=./dist/browser",
    "electron:tsc": "tsc ./electron-main.ts",
    "electron:serve": "wait-on http-get://localhost:4200/ && npm run electron:tsc && electron ./electron-main.js --serve",
    "electron:local": "npm run electron:build:prod && electron ./electron-main.js",
    "electron:linux": "npm run electron:build:prod && npx electron-builder build --linux",
    "electron:windows": "npm run electron:build:prod && npx electron-builder build  --windows",
    "electron:mac": "npm run electron:build:prod && npx electron-builder build --mac"
  },
  "private": true,
  "devDependencies": {
    "cross-env": "^5.2.0",
    "electron": "^2.0.6",
    "electron-builder": "^20.26.1",
    "electron-reload": "^1.2.5",
    "npx": "^10.2.0",
    "wait-on": "^2.1.0",
    "webdriver-manager": "^12.1.0"
  }
}
